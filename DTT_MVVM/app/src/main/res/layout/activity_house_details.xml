<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backbtn"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                ></androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:id="@+id/imagedetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/x">

            </ImageView>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="190dp"
                android:background="@drawable/rad"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pricedetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="price"
                        android:textColor="#F8000000"
                        android:textSize="18dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/ic_baseline_bed_24"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/beddetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:text="bed"
                        android:textColor="#aeaeae"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_baseline_bathtub_24"
                        android:layout_marginLeft="230dp" />
                    <TextView
                        android:id="@+id/bathdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:text="bath"
                        android:textColor="#aeaeae"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_baseline_layers_24"
                        android:layout_marginLeft="230dp" />

                    <TextView
                        android:id="@+id/sizedetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:text="size"
                        android:textColor="#aeaeae"
                        android:textSize="12dp"
                        android:textStyle="normal" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:layout_marginLeft="230dp" />

                    <TextView
                        android:id="@+id/locdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:layout_marginTop="8dp"
                        android:textColor="#aeaeae"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:layout_marginLeft="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="490dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:textColor="#b2b2b2"
                        android:textStyle="normal"
                        android:text="test"
                        android:layout_marginLeft="20dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Location"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp">

                    </TextView>
                    <ImageView
                        android:id="@+id/maps"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/maps"
                        android:layout_height="250dp"
                        android:layout_marginLeft="20dp">

                    </ImageView>
                </LinearLayout>



            </FrameLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>